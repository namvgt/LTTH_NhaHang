                <form>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×&nbsp;</span>
                    </button>
                    <div class="dialog-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div style="padding: 50px 0 0 20px">
                                    <img src="~/Content/img/book_left_image.jpg" alt="">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="right-info">
                                    <h4>Reservation</h4>
                                    <form id="form-submit" method="post" action="/api/datban/Post">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <fieldset>
                                                    <input style="margin-top:15px; margin-bottom:15px;" name="ngaydat" type="date" class="form-control" id="name" placeholder="Ngày ăn" required="">
                                                </fieldset>
                                            </div>
                                            <div class="col-md-6">
                                                <fieldset>
                                                    <input style="margin-top:15px; margin-bottom:15px;" name="sogio" type="text" class="form-control" id="name" placeholder="Giờ ăn" required="">
                                                </fieldset>
                                            </div>
                                            <div class="col-md-6">
                                                <fieldset>
                                                    <input style="margin-top:15px; margin-bottom:15px;" name="hoten" type="text" class="form-control" id="name" placeholder="Họ tên khách hàng" required="">
                                                </fieldset>
                                            </div>
                                            <div class="col-md-6">
                                                <fieldset>
                                                    <input style="margin-top:15px; margin-bottom:15px;" name="sdt" type="text" class="form-control" id="phone" placeholder="SĐT" required="">
                                                </fieldset>
                                            </div>
                                            <div class="col-md-6">
                                                <fieldset>
                                                    <select required class="person" name='songuoi'>
                                                        <option value="">Số người ?</option>
                                                        <option value="1-Person">1</option>
                                                        <option value="2-Persons">2</option>
                                                        <option value="3-Persons">3</option>
                                                        <option value="4-Persons">4</option>
                                                        <option value="5-Persons">5</option>
                                                        <option value="6-Persons">6</option>
                                                    </select>
                                                </fieldset>
                                            </div>
                                            <div class="col-md-6">
                                                <fieldset>
                                                    <button type="submit" id="form-submit" class="btn">Book Table</button>
                                                </fieldset>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
