    <div class="modal fade" id="datban" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" style="width: 620px" role="document">
            <div class="modal-content">
                @*<div class="modal-header">
